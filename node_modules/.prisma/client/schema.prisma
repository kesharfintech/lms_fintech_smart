generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  menus Menu[]

  createdAt DateTime  @default(now())
  createdBy String?
  updateBy  String?
  updateAt  DateTime?
}

model Menu {
  id       Int    @id @default(autoincrement())
  menuName String @unique

  userId Int
  user   User @relation(fields: [userId], references: [id])

  createdAt DateTime  @default(now())
  createdBy String
  updateBy  String?
  updateAt  DateTime?
}
